<div class="span12">
    <div class="search">
        <%= link_to("New", new_search_path , :class => "btn btn-mini btn-primarypull-right") %>
    </div>
    <table class="table">
        <thead>
            <tr>
                <td> # </td>
                <td> Title </td>
                <td> Descroption </td>
           </tr>
        </thead>

        <tbody>
            <% @searches.each do |search| %>
            <tr>
                <td> # </td>
                <td> <%= link_to(search.title, search_path(search)) %> </td>
                <td> <%= search.description %> </td>
                <td> <%= link_to("Edit", edit_search_path(search), :class => "btn btn-mini") %>
                <%= link_to("Delete", search_path(search), :class => "btn btn-mini", :method => :delete, :confirm => "Are you sure?" ) %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
